generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model BankRefund {
  id          String   @id @default(uuid())
  date        DateTime
  name        String
  amount      Float
  utr         String   @unique
  chatId      String   @map("chat_id")
  fileId      String   @map("file_id")
  processedAt DateTime @default(now()) @map("processed_at")

  @@map("bank_refunds")
}